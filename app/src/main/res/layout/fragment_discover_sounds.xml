<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutDisc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violetbox"
        tools:context=".disc.DiscoverSoundsFragment">

        <HorizontalScrollView
            android:id="@+id/scrollButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_button_pressed"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="All"
                    android:textColor="@drawable/tab_button_colors"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_button_pressed"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Lo - Fi"
                    android:textColor="@drawable/tab_button_colors"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_button_pressed"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Water"
                    android:textColor="@drawable/tab_button_colors"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_button_pressed"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Nature"
                    android:textColor="@drawable/tab_button_colors"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_button_pressed"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="ASMR"
                    android:textColor="@drawable/tab_button_colors"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_button_pressed"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Brainwave"
                    android:textColor="@drawable/tab_button_colors"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:id="@+id/fragmentContainerfilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollButton"
            app:layout_constraintVertical_bias="0.1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:text="Recently Played"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRecently"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView26"
                    app:reverseLayout="true"
                    app:stackFromEnd="true"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="125dp"
                    tools:listitem="@layout/item_recently_sound" />

                <TextView
                    android:id="@+id/asmrcolle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="ASMR Collections"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerViewRecently"
                    app:layout_constraintVertical_bias="0.013" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewASMR"
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/asmrcolle"
                    app:reverseLayout="true"
                    app:spanCount="4"
                    app:stackFromEnd="true"
                    tools:listitem="@layout/item_asmr_sound" />

                <TextView
                    android:id="@+id/takingcare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="Taking Care of Your Brain"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/recyclerViewTCOYB"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerViewASMR" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTCOYB"
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/takingcare"
                    app:reverseLayout="true"
                    app:spanCount="4"
                    app:stackFromEnd="true"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="437dp"
                    tools:listitem="@layout/item_tcoyb_sound" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
